  <uses-permission android:name="android.permission.INTERNET"/>
  <!-- BLE hardware -->
  <uses-feature android:name="android.hardware.bluetooth_le" android:required="true" />

  <!-- Android 11 and below (API ≤30) -->
  <uses-permission android:name="android.permission.BLUETOOTH" android:maxSdkVersion="30" />
  <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" android:maxSdkVersion="30" />
  <!-- Location is needed for BLE scans on < Android 12 -->
  <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" android:maxSdkVersion="30" />
  <!-- (Optional) If you scan in background on Android 10–11 -->
  <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" android:maxSdkVersion="30" />

  <!-- Android 12+ (API 31+) granular BT permissions -->
  <uses-permission
      android:name="android.permission.BLUETOOTH_SCAN"
      android:usesPermissionFlags="neverForLocation" />
  <uses-permission android:name="android.permission.BLUETOOTH_CONNECT" />
  <!-- Only if you advertise (peripheral mode). Not needed for scan/connect only: -->
  <!-- <uses-permission android:name="android.permission.BLUETOOTH_ADVERTISE" /> -->

  <!-- Foreground service (if you scan while app is not in foreground) -->
  <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
  <!-- Android 14+ specific FGS type for device connections (optional but recommended if you background-connect): -->
  <uses-permission android:name="android.permission.FOREGROUND_SERVICE_CONNECTED_DEVICE" />


